<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<VBox spacing="15.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group6_britishcouncilinbangladesh.Sadat.HardwareIssueResolverController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="Resolve Hardware Issues">
        <font>
            <Font size="24" name="System Bold"/>
        </font>
    </Label>

    <!-- Ticket ID Input -->
    <TextField fx:id="ticketIdField" promptText="Enter ticket ID"/>

    <!-- Diagnostic Steps Input -->
    <TextArea fx:id="diagnosticStepsArea" promptText="Enter diagnostic steps" prefHeight="200" wrapText="true"/>

    <!-- Priority Selection -->
    <ComboBox fx:id="priorityComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Low"/>
                <String fx:value="Medium"/>
                <String fx:value="High"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Submit Button -->
    <Button fx:id="submitButton" text="Submit Ticket" onAction="#handleSubmitTicket"/>

    <!-- Message Display -->
    <Label fx:id="messageLabel" text="" wrapText="true"/>
</VBox>


