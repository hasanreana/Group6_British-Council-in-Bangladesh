<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.group6_britishcouncilinbangladesh.Sadat.SystemBackupRecoveryController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="System Backup and Recovery">
        <font>
            <Font size="24" name="System Bold"/>
        </font>
    </Label>

    <!-- Backup Scope Selection -->
    <ComboBox fx:id="backupScopeComboBox">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Full Backup"/>
                <String fx:value="Partial Backup"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Initiate Backup Button -->
    <Button fx:id="initiateBackupButton" text="Initiate Backup" onAction="#handleInitiateBackup"/>

    <!-- Backup Progress Display -->
    <ProgressBar fx:id="backupProgressBar" progress="0" prefWidth="300"/>

    <!-- Recover Backup Button -->
    <Button fx:id="recoverBackupButton" text="Recover Backup" onAction="#handleRecoverBackup"/>

    <!-- Message Display -->
    <Label fx:id="messageLabel" text="" wrapText="true"/>
</VBox>
