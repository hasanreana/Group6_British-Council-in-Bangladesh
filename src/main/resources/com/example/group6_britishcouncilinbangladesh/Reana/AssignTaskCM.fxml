<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.group6_britishcouncilinbangladesh.Reana.AssignTaskCMController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="190.0" layoutY="19.0" prefHeight="36.0" prefWidth="220.0" text="Assign Task">
            <font>
                <Font name="Arial Bold Italic" size="31.0" />
            </font>
        </Label>
        <Button layoutX="39.0" layoutY="380.0" mnemonicParsing="false" onAction="#goBackToDashboardButtonOnClick" prefHeight="31.0" prefWidth="65.0" text="Back" />
        <Label layoutX="14.0" layoutY="73.0" text="Whom would you like to  assign task to?">
            <font>
                <Font name="System Bold Italic" size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="userComboBox" layoutX="335.0" layoutY="70.0" prefHeight="31.0" prefWidth="157.0" promptText="select" style="-fx-background-color: white;" />
        <Label layoutX="223.0" layoutY="164.0" text="Task  Details:">
            <font>
                <Font name="Arial Bold Italic" size="15.0" />
            </font>
        </Label>
        <TextArea fx:id="taskDetailssTextArea" layoutX="325.0" layoutY="155.0" prefHeight="36.0" prefWidth="238.0" />
        <Button layoutX="444.0" layoutY="380.0" mnemonicParsing="false" onAction="#assignTaskButtonOnClick" prefHeight="31.0" prefWidth="105.0" text="Assign Task" />
        <Label layoutX="234.0" layoutY="118.0" text="Due Date:">
            <font>
                <Font name="System Bold Italic" size="16.0" />
            </font>
        </Label>
        <DatePicker fx:id="duedateDatePicker" layoutX="335.0" layoutY="115.0" />
        <TextArea fx:id="taskTextArea" layoutX="172.0" layoutY="221.0" prefHeight="148.0" prefWidth="302.0" />
    </children>


</AnchorPane>
